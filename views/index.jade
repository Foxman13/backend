extends layout

block content

 
  div(class ='container')
   div(class='row')
    header
     h1="OnOff"
   div(class='row')
    div(class='col-md-3')
     div(class='row title-inputs')
      h2='Inputs'
     div(class='row')
      ul(class='input-list')
       li
        
        span(class='symbol')!='&#xe286;'
        h3='Twitter'
        
       li
        span(class='symbol')!='&#xe227;'
        h3='Facebook'
 
       li
        span(class='symbol')!='&#xe227;'
        h3='Stuff'
    div(class='col-md-6 campaign')
     div(class='row title-campaign')
      h2='Campaign'
     div(class='row')
      div(class='col-md-10 col-md-offset-1')
       div(class='row')
        button(class='btn btn-default btn-lg')
         icon(class='glyphicon glyphicon-plus')
        h2(class='create-title')='Create a new Campaign'
       div(class='row')
        h3='Name Campaign'
        div(class='form-group')
          input#CampaignName(class='form-control', type='text', name='campaignNameInput', placeholder='campaign name')
        div(class='form-group')
          input#CampaignDescription(class='form-control', type='text', name='campaignDescriptionInput', placeholder='description')
        button#submit(type='submit', class='submit btn btn-default') submit
    div(class='col-md-3')
     div(class="row title-output")
      h2='Output'
     div(class='col-md-4')
      div(class='row')
       ul(class='output-list')
        li
         h3='Custom'
        li
         h3='Things'
        li
         h3='Base'




