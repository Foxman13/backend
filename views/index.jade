extends layout

block content

 
  div(class ='container')
   div(class='row')
    header
     h1="OnOff"
   div(class='row')
    div(class='col-md-3')
     h2='Inputs'
     div(class='row')
      ul(class='input-list')
       li
        span='+'
        h3='Twitter'
       li
        span='+'
        h3='Facebook'
       li
        span='+'
        h3='Stuff'
    div(class='col-md-6 campaign')
     h2='Campaign'
       button(class='btn btn-default btn-lg')
         icon(class='glyphicon glyphicon-plus')
       h3='New Campaign'
       div#submit-campaign(class='form-group', name='newCampaign', action='/addnewcampaign', method='post')
         h4='Campaign Name'
         input#campaignname(class='form-control', type='text', name='campaignNameInput', placeholder='campaign name')
         h4='Campaign Description'
         input#campaigndescription(class='form-control', type='text', name='campaignDescriptionInput', placeholder='description')
         button#submit(type='submit', class='btn btn-default') submit
     h2='Current Campaigns'

    div(class='col-md-3')
     h2='Output'
     div(class='col-md-4')
      div(class='row')
       ul(class='output-list')
        li
         h3='Custom'
        li
         h3='Things'
        li
         h3='Base'




